{
  "manifest_version": 2,
  
  "name": "Mirror Maker",
  "description": "Create a Streamable mirror for the video of the currently selected tab.",
  "version": "0.1.0",
  "icons": {
    "128": "icons/128.png"
  },

  "browser_action": {
    "default_popup": "popup.html"
  },
  "permissions": [
    "activeTab",
    "https://api.streamable.com/*"
  ]
}