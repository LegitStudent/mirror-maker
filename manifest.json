{
  "manifest_version": 2,
  
  "name": "Mirror Maker",
  "description": "Create a Streamable mirror for the video of the currently selected tab.",
  "version": "0.1.3",
  "icons": {
    "16": "icons/16.png",
    "48": "icons/48.png",
    "128": "icons/128.png"
  },

  "browser_action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/16.png",
      "24": "icons/24.png",
      "32": "icons/32.png"
    } 
  },
  "permissions": [
    "activeTab",
    "https://api.streamable.com/*"
  ]
}